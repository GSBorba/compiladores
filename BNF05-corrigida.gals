#Options
GenerateScanner = true
GenerateParser = true
Language = Java
ScannerName = Lexico
ParserName = Sintatico
SemanticName = Semantico
Package = codigoLexicoSintatico
ScannerCaseSensitive = true
ScannerTable = Compact
Input = Stream
Parser = LL
#RegularDefinitions
prefixo: "_" (i|f|b|s)

inteiro: 0 | [1-9][0-9]*

corpo: ([^\n\""\""%"]* | % (i|f|s|b))*
#Tokens
// EQUIPE: Andre Heller; Gabriel de Souza Borba; Henrique de Oliveira
// NOTA: 9,5

//palavra reservada
reservada: [a-z]+

//identificador
identificador: {prefixo}([A-Z]([a-z0-9]+[A-Z]?)* | [a-z]([A-Z]?[a-z0-9])*[A-Z]?)

//contante_int
int: 0 | [1-9][0-9]*

//constante_float
float: {inteiro}"."[0-9]([0-9]*[1-9])?

//constante_string
string: \"{corpo}\"

//rela√ß√£o das palavras reservadas
//do else false fun if in main out repeat true while
do = reservada: "do"
else = reservada: "else"
false = reservada: "false"
fun = reservada: "fun"
if = reservada: "if"
in = reservada: "in"
main = reservada: "main"
out = reservada: "out"
repeat = reservada: "repeat"
true = reservada: "true"
while = reservada: "while"

//rela√ß√£o dos simbolos especiais
//& | ! , ; = : ( ) { } == != < > + - * /
"&"
"|"
"!"
","
";"
"="
":"
"("
")"
"{"
"}"
"=="
"!="
"<"
">"
"+"
"-"
"*"
"/"

//reconhecer e ignorar caracteres de formata√ß√£o
:[\s\t\n\r]

//reconhecer e ignorar coment√°rios
:! "#"[^\n]*
:! "["[^\[\]]*"]"
#NonTerminals
